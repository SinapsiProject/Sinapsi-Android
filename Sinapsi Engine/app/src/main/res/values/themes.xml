<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="AppTheme" parent="AppTheme.Base"/>
    <style name="AppTheme.Base" parent="Base.Theme.AppCompat.Light">
        <item name="colorPrimary">@color/sinapsi_blue</item>
        <item name="colorPrimaryDark">@color/sinapsi_blue_dark</item>
        <item name="android:colorAccent"
            tools:targetApi="21">@color/sinapsi_blue</item>
        <item name="android:textColorPrimary">@color/grey_white_1000</item>
        <item name="colorControlNormal">@color/sinapsi_blue</item>
        <item name="colorControlActivated">@color/sinapsi_blue_dark</item>
        <item name="colorControlHighlight">@color/sinapsi_blue_dark</item>
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">true</item>
        <item name="android:editTextStyle">@style/App_EditTextStyle</item>
        <item name="android:autoCompleteTextViewStyle">@style/App_AutoCompleteTextViewStyle</item>
    </style>
    <style name="FullBlackBackgroundTheme" parent="android:Theme.Light.NoTitleBar.Fullscreen">
        <item name="android:background">@android:color/black</item>
        <item name="android:windowBackground">@android:color/black</item>
        <item name="android:colorBackground">@android:color/black</item>
    </style>
    <style name="App_EditTextStyle" parent="@android:style/Widget.EditText">
        <item name="android:textColor">@color/abc_secondary_text_material_light</item>
        <item name="android:layout_height">45dip</item>
    </style>
    <style name="App_AutoCompleteTextViewStyle" parent="@android:style/Widget.AutoCompleteTextView">
        <item name="android:textColor">@color/abc_secondary_text_material_light</item>
        <item name="android:layout_height">45dip</item>
    </style>


</resources>